---
import { formatDate } from '@lib/dateUtils';
import { generateTagUrl } from '@lib/postUtils';

interface Props {
    title: string;
    link: string;
    tags: string[];
    date: Date;
    excerpt?: string;
    readTime?: number;
}

const { title, link, tags, date, excerpt, readTime } = Astro.props;
---

<article class="post">
    <div class="metadata">
        <div class="post-date">{formatDate(date)}</div>
        {
            readTime ? (
                <>
                    <div>&bull;</div>
                    <div class="read-time">{readTime} min read</div>
                </>
            ) : null
        }
    </div>
    <h2><a href={link}>{title}</a></h2>
    <ul class="tag-list">
        {
            tags.map((tag) => (
                <li>
                    <a href={`/tag/${generateTagUrl(tag)}`}>{tag}</a>
                </li>
            ))
        }
    </ul>
    {excerpt ? <div class="excerpt" set:html={excerpt} /> : null}
</article>

<style>
    article.post {
        margin: 0 0 5rem 0;
        background-color: var(--blog-link-background);
        box-shadow: 0 12px 24px 0 hsla(0, 0%, 0%, 0.2);
        border-radius: 10px;
        padding: 2rem;
    }

    article.post .metadata {
        display: flex;
        justify-content: flex-start;
        gap: 1rem;
        text-transform: uppercase;
    }

    article.post h2 {
        font-size: 3rem;
        line-height: 1.1;
    }

    div.excerpt {
        margin: 1rem 0 0;
        font-size: 1.4rem;
    }

    .tag-list {
        margin: 0;
        padding: 0;
        width: 100%;
    }

    .tag-list li {
        display: inline-block;
        list-style-type: none;
        padding: 0 30px 0 0;
        line-height: 2;
    }

    .tag-list li:first-child {
        padding-left: 0;
    }

    .tag-list li a {
        white-space: nowrap;
        font-size: 1.2rem;
    }

    @media (max-width: 414px) {
        article.post h2 {
            font-size: 2.25rem;
            margin-bottom: 1rem;
        }
    }
</style>
